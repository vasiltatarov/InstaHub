@using InstaHub.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/lazy.css" asp-append-version="true">
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-dark mb-4 bg-primary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown-17" aria-controls="navbarNavDropdown-7" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center" id="navbarNavDropdown-17">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="HomePage" asp-action="Posts">
                            <i class="fas fa-home fa-fw"></i>Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="GetCategories">
                            <i class="fas fa-passport fa-fw"></i>Categories
                        </a>
                    </li>

                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Chat" asp-action="Chat">
                                <i class="far fa-comment-dots"></i>Chat
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Profile" asp-action="GetPosts" asp-route-username="@User.Identity.Name" class="nav-link text-white" title="Manage">
                                <i class="fas fa-user-tie fa-fw"></i>Profile
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Services
                            </a>
                            <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 49px, 0px); top: 0px; left: 0px; will-change: transform;">
                                <a class="dropdown-item" asp-area="" asp-controller="Profiles" asp-action="GetProfiles">
                                    <i class="fas fa-users fa-fw"></i> Profiles
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="UserSavedPosts" asp-action="GetSavedPosts">
                                    <i class="fas fa-save fa-fw"></i> Saved
                                </a>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    <i class="fas fa-user-cog"></i> Settings
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="Contacts" asp-action="Index">
                                    <i class="fas fa-mail-bulk"></i> Contact Us
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AboutUs">
                                    <i class="fas fa-info"></i> About Us
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-user-secret fa-fw"></i> Privacy
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-secret fa-fw"></i>Privacy
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="footer-1 bg-light text-dark">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="links">
                    <ul class="footer-menu list-unstyled d-flex flex-row text-center text-md-left">
                        <li><a href="https://vasiltatarov.github.io/Vasko00/" target="_blank">My Portfolio</a></li>
                        <li><a href="https://github.com/vasiltatarov/ForumSystem" target="_blank">Source Code</a></li>
                        <li><a asp-area="" asp-controller="Contacts" asp-action="Index">Contact Us</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                    </ul>
                </div>
                <div class="social mt-4 mt-md-0">
                    <a class="twitter btn btn-outline-primary btn-icon" href="https://twitter.com/bootstrapbay" target="_blank">
                        <i class="fab fa-twitter"></i>
                        <span class="sr-only">View our Twitter Profile</span>
                    </a>
                    <a class="facebook btn btn-outline-primary btn-icon" href="https://www.facebook.com/bootstrapbayofficial/" target="_blank">
                        <i class="fab fa-facebook"></i>
                        <span class="sr-only">
                            View our Facebook Profile
                            <span>
                            </span>
                        </span>
                    </a>
                    <a class="github btn btn-outline-primary btn-icon" href="https://github.com/vasiltatarov/ForumSystem" target="_blank">
                        <i class="fab fa-github"></i>
                        <span class="sr-only">View our GitHub Profile</span>
                    </a>
                </div>
            </div>
            <div class="copyright text-center">
                <hr>
                <p><strong>InstaHub</strong> &copy; 2020-2021</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <script src="~/lib/moment/min/moment-with-locales.min.js" asp-append-version="true"></script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @*<script src="~/vendor/jquery/jquery.min.js" asp-append-version="true"></script>*@
    <script src="~/vendor/popper/popper.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>

    <!-- optional plugins -->
    <script src="~/vendor/nouislider/js/nouislider.js" asp-append-version="true"></script>

    <!--   lazy javascript -->
    <script src="~/js/lazy.js" asp-append-version="true"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>