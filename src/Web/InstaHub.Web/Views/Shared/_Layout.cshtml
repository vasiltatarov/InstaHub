@using InstaHub.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/vendor/bootstrap/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/lazy.css" asp-append-version="true">
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-dark mb-4 bg-primary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown-17" aria-controls="navbarNavDropdown-7" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center" id="navbarNavDropdown-17">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="HomePage" asp-action="Posts">
                            <i class="fas fa-home fa-fw"></i>Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="GetCategories">
                            <i class="fas fa-passport fa-fw"></i>Categories
                        </a>
                    </li>

                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Chat" asp-action="Chat">
                                <i class="far fa-comment-dots"></i>Chat
                            </a>
                        </li>

                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Profiles" asp-action="GetProfiles">
                                <i class="fas fa-users fa-fw"></i>Profiles
                            </a>
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-list-ul"></i> More
                        </a>

                        <div class="dropdown-menu  bg-primary" aria-labelledby="navbarDropdown">
                            @if (this.User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link" asp-area="" asp-controller="UserSavedPosts" asp-action="GetSavedPosts">
                                    <i class="fas fa-save fa-fw"></i>Saved
                                </a>
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    <i class="fas fa-user-cog"></i>Settings
                                </a>
                                <div class="dropdown-divider"></div>
                            }

                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-secret fa-fw"></i>Privacy
                            </a>
                        </div>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Posts" asp-action="Create" class="btn btn-primary" type="button">
                            <i class="fas fa-plus"></i>&nbsp;Publication
                        </a>
                    </li>
                </ul>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container">
            <div class="row text-white">
                <div class="col-md-6">
                    <p><strong>InstaHub</strong> &copy; 2020-2021</p>
                </div>
                <p>
                    <a class="text-white" href="https://vasiltatarov.github.io/Vasko00/" target="_blank">
                        My Portfolio
                    </a>
                <p>&#8192;&#8192;&#8192;&#8192;&#8192;&#8192;</p>
                <a class="text-white" href="https://github.com/vasiltatarov/ForumSystem" target="_blank">
                    <i class="fab fa-github"></i> &nbsp; InstaHub - Open Source Project
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <script src="~/lib/moment/min/moment-with-locales.min.js" asp-append-version="true"></script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @*<script src="~/vendor/jquery/jquery.min.js" asp-append-version="true"></script>*@
    <script src="~/vendor/popper/popper.min.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap/bootstrap.min.js" asp-append-version="true"></script>

    <!-- optional plugins -->
    <script src="~/vendor/nouislider/js/nouislider.min.js" asp-append-version="true"></script>

    <!--   lazy javascript -->
    <script src="~/js/lazy.js" asp-append-version="true"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>