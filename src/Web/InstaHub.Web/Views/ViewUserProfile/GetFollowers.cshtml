@model InstaHub.Web.ViewModels.ViewUserProfile.UserProfileViewModel

<link href="~/css/profile.css" rel="stylesheet" asp-append-version="true" />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="content">
                <div class="profile">
                    <div class="profile-header">
                        <div class="profile-header-cover"></div>
                        <div class="profile-header-content">
                            <div class="profile-header-img">
                                <img src="~/uploads/@Model.ImagePath" alt="">
                            </div>
                            <div class="profile-header-info">
                                <h4>@Model.Username</h4>
                                <br />
                                @if (this.Model.Username != this.User.Identity.Name)
                                {
                                    @if (this.Model.IsUserFollowed)
                                    {
                                        <a asp-area="" asp-controller="Follow" asp-action="Unfollow" asp-route-username="@this.Model.Username" class="btn btn-dark">Unfollow</a>
                                    }
                                    else
                                    {
                                        <a asp-area="" asp-controller="Follow" asp-action="Follow" asp-route-username="@this.Model.Username" class="btn btn-warning">Follow</a>
                                    }
                                }
                            </div>
                        </div>
                        <ul class="profile-header-tab nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ViewUserProfile" asp-action="ByUsername" asp-route-username="@this.Model.Username">POSTS ( @this.Model.PostsCount )</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active show" asp-area="" asp-controller="ViewUserProfile" asp-action="GetFollowers" asp-route-username="@this.Model.Username">FOLLOWERS ( @this.Model.Followers.Count() )</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ViewUserProfile" asp-action="GetFollowing" asp-route-username="@this.Model.Username">FOLLOWING ( @this.Model.Followed.Count() )</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ViewUserProfile" asp-action="About" asp-route-username="@this.Model.Username">ABOUT</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="profile-content">
                    <div class="container mt-5">
                        <div class="d-flex justify-content-center row">
                            <div class="col-md-6">
                                <div class="p-3 bg-white text-center">
                                    @foreach (var follower in this.Model.Followers)
                                    {
                                        <div class="d-flex flex-row justify-content-between align-items-center">
                                            <div class="d-flex flex-row align-items-center">
                                                <img class="rounded-circle" src="~/uploads/@follower.FollowerImagePath" width="60" style="height: 60px;">
                                                <div class="d-flex flex-column align-items-start ml-2">
                                                    <span class="font-weight-bold">@follower.FollowerUserName</span>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mt-2">
                                                <a asp-area="" asp-controller="ViewUserProfile" asp-action="ByUsername" asp-route-username="@follower.FollowerUserName" class="btn btn-outline-primary btn-sm" type="button">View Profile</a>
                                            </div>
                                        </div>
                                        <hr />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
