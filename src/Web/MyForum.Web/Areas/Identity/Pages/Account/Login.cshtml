@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <meta charset="utf-8">
    <title>Vzemi salamche.com</title>
</head>
<body class="bg-dark">
    <img src="~/images/login.jpg" style="width: 1350px; height: 900px;" />

    <div class="login-box">

        <form id="account" method="post">
            <h1>Login</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="textbox">
                <i class="fas fa-lock"></i>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
            <p>By creating an account you agree to our <a href="uslovia.html">Terms & Privacy</a>.</p>
            <p>Dont have an account?                   <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Here</a>.</p>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        </form>

