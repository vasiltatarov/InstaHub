@model MyForum.Web.ViewModels.Home.IndexViewModel
@using MyForum.Common
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}!";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    <h2>@DateTime.Now.DayOfWeek --- @DateTime.Now</h2>
</div>
<hr/>
<div class="row">
    @foreach (var category in this.Model.Categories)
    {
        <div class="col-md-4 media p-3">
            <img src="@category.ImageUrl" style="width: 200px; height: 140px" class="mr-3" alt="@category.Title" />
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@category.Url">@category.Title (@category.PostsCount)</a>
                </h5>
                @category.Description
            </div>
        </div>
    }
</div>